[user]
  name = Jason Shipman
  email = jasonpshipman@gmail.com
[alias]
  prnc = pull --rebase --no-commit
  rup = remote update --prune
  mb = merge-base --all --fork-point
  graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  rheads = !git-rheads
  reset-date = '!function f() { git-reset-date "$1" } && f'
  apply-pr = !git-apply-pr
  find-replace = !git-find-replace
[diff]
  #tool = bc3
  colorMoved = default
[merge]
  #tool = bc3
  conflictstyle = diff3
[mergetool "bc3"]
  trustExitCode = true
[core]
  editor = /usr/bin/nvim
  excludesfile = /home/jship/.gitignore_global
  pager = delta
[rerere]
  enabled = true
  autoupdate = true
[push]
  default = current
[delta]
  navigate = true  # use n and N to move between diff sections
  side-by-side = true
[interactive]
  diffFilter = delta --color-only
